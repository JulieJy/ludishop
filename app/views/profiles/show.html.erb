<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6">

      <h3>Profile</h3>
      <table class="table table-bordered">
        <img src="<%= @user.photo %>" alt="profile-picture" class="avatar">
        <tbody>
          <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Reviews</th>
          </thead>
            <tr>
              <td><%= @user.first_name %></td>
              <td><%= @user.last_name %></td>
              <td><%= @user.address %></td>
              <td><%= @user.email %></td>
              <td><%= @user.phone_number %></td>
              <% @user.reviews.each do |review| %>
                <td><%= review.content %></td>
                <td><%= review.rate %></td>
              <% end %>
            </tr>
        </tbody>
      </table>

      <h4>Your games to be sold</h4>
      <% @user.games.where(buyer_id: nil).each do |game| %>
        <ul>
          <li> <%= game.name %> (<%= game.price.to_i %>â‚¬) </li>
        </ul>
      <% end %>

      <h4>Transactions</h4>
        <h5>Sold</h5>
          <% unless @user.sold_games == nil %>
            <ul>
              <% @user.sold_games.each do |sold_game| %>
                <li>You have sold <%= sold_game.name %> on the following date <%= Time.now %></li>
              <% end %>
            </ul>
          <% end %>

          <h5>Bought</h5>
            <%= @user.bought_games.count %>
            <% unless @user.bought_games == nil %>
              <ul>
                <% @user.bought_games.each do |bought_game| %>
                  <li>
                    You have bought <%= bought_game.name %> on the following date <%= Time.now %>
                    <%= link_to "Add Review", new_user_review_path(bought_game.user), class: "btn btn-primary" %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          <br>
          <br>
          <br>
      <%= link_to "Edit Profile", edit_profile_path(@user), class: "btn btn-primary" %>
    </div>
  </div>
</div>
