<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Update your profile</h1>

      <%= simple_form_for profile_path(params[:id]) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.submit "Validate", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
